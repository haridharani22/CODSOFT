# Step 1: Import libraries
import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns

# Step 2: Load dataset
data = pd.read_csv("Titanic_dataset.csv")

print("First 5 rows of the dataset:")
print(data.head())

# Step 3: Drop unnecessary columns
data.drop(columns=['Name', 'Ticket', 'Cabin'], inplace=True)

# Step 4: Handle missing values
data['Age'].fillna(data['Age'].median(), inplace=True)
data['Embarked'].fillna(data['Embarked'].mode()[0], inplace=True)

# Step 5: Encode categorical variables
data['Sex'] = data['Sex'].map({'male': 0, 'female': 1})
data['Embarked'] = data['Embarked'].map({'S': 0, 'C': 1, 'Q': 2})

# Step 6: Dataset info
print("\nDataset Information:")
print(data.info())

print("\nStatistical Summary:")
print(data.describe())

# Step 7: Exploratory Data Analysis (EDA)

# Survival count
plt.figure()
sns.countplot(x='Survived', data=data)
plt.title("Survival Count")
plt.show()

# Gender vs Survival
plt.figure()
sns.barplot(x='Sex', y='Survived', data=data)
plt.title("Gender vs Survival")
plt.show()

# Passenger Class vs Survival
plt.figure()
sns.barplot(x='Pclass', y='Survived', data=data)
plt.title("Passenger Class vs Survival")
plt.show()

# Age distribution
plt.figure()
sns.histplot(data['Age'], bins=20, kde=True)
plt.title("Age Distribution")
plt.show()

# Fare vs Survival
plt.figure()
sns.boxplot(x='Survived', y='Fare', data=data)
plt.title("Fare vs Survival")
plt.show()

# Step 8: Insights
print("\nKey Insights:")
print("• Female passengers had a higher survival rate.")
print("• First-class passengers were more likely to survive.")
print("• Children had better survival chances.")
print("• Higher fare passengers showed higher survival probability.")

print("\nTitanic Survival Analysis ")
